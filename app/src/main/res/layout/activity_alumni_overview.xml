<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:padding="15dp"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="Lists.AlumniOverview">

    <ViewFlipper
        android:id="@+id/Alumni_flipper"
        android:layout_width="match_parent"
        android:layout_height="252dp"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/AL_Link1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Recents Event"
        android:textAlignment="center"
        android:textColor="@color/DarkGreen"
        android:textSize="22dp"/>

    <TextView
        android:id="@+id/AL_Link2"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="> Alumni Meet 2018-19"
        android:textSize="20dp"
        android:textColor="@color/Blue"/>

    <TextView
        android:id="@+id/AL_Link3"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="> Alumni Meet 2017-18"
        android:textSize="20dp"
        android:textColor="@color/Blue"/>
    <TextView
        android:id="@+id/AL_Link4"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="> Alumni Meet 2016-17"
        android:textSize="20dp"
        android:textColor="@color/Blue"/>
    <TextView
        android:id="@+id/AL_Link5"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="> Alumni Meet 2015-16"
        android:textSize="20dp"
        android:textColor="@color/Blue"/>
    <TextView
        android:id="@+id/AL_Link6"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="> Alumni Meet 2014-15"
        android:textSize="20dp"
        android:textColor="@color/Blue"/>

</LinearLayout>