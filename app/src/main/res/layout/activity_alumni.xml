<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Alumni">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alignmentMode="alignMargins"
        android:columnOrderPreserved="false"
        android:padding="14dp"
        android:rowCount="4">

        <!-- row 1 column 1-->
        <Button
            android:id="@+id/AlumniOverview_btn"
            android:layout_width="206dp"
            android:layout_height="206dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/rounded_card"
            android:text="Alumni Overview"
            android:textAllCaps="false"
            android:textColor="@color/color_title"
            android:textSize="18dp"
            android:textStyle="italic"/>

        <!--        &lt;!&ndash; row 1 column 2&ndash;&gt;-->
        <Button
            android:id="@+id/AlumniCommittee_btn"
            android:layout_width="206dp"
            android:layout_height="206dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/rounded_card"
            android:text="Committee"
            android:textAllCaps="false"
            android:textColor="@color/color_title"
            android:textSize="18dp"
            android:textStyle="italic"/>

        <!--        &lt;!&ndash; row 2&ndash;&gt;-->
        <Button
            android:id="@+id/AlumniGallery_btn"
            android:layout_width="206dp"
            android:layout_row="1"
            android:layout_marginTop="10dp"
            android:layout_column="0"
            android:layout_height="206dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/rounded_card"
            android:text="Gallery"
            android:textAllCaps="false"
            android:textColor="@color/color_title"
            android:textSize="18dp"
            android:textStyle="italic"/>

        <Button
            android:id="@+id/AlumniEvents_btn"
            android:layout_width="206dp"
            android:layout_height="206dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/rounded_card"
            android:text="Events"
            android:textAllCaps="false"
            android:layout_marginTop="10dp"
            android:textColor="@color/color_title"
            android:textSize="18dp"
            android:textStyle="italic"/>

        <!--        &lt;!&ndash; row 2&ndash;&gt;-->
        <Button
            android:id="@+id/FamousAlumni_btn"
            android:layout_width="206dp"
            android:layout_row="2"
            android:layout_marginTop="10dp"
            android:layout_column="0"
            android:layout_height="206dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/rounded_card"
            android:text="Famous Alumni"
            android:textAllCaps="false"
            android:textColor="@color/color_title"
            android:textSize="18dp"
            android:textStyle="italic"/>

        <Button
            android:id="@+id/AlumniSpeak_btn"
            android:layout_width="206dp"
            android:layout_height="206dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/rounded_card"
            android:text="Alumni Speak"
            android:textAllCaps="false"
            android:layout_marginTop="10dp"
            android:textColor="@color/color_title"
            android:textSize="18dp"
            android:textStyle="italic"/>
    </GridLayout>


</androidx.constraintlayout.widget.ConstraintLayout>