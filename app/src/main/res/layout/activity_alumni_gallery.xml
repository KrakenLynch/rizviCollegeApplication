<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context="Lists.AlumniGallery">

    <androidx.cardview.widget.CardView
        android:id="@+id/Alumni_Gallery1_card"
        android:layout_width="match_parent"
        android:layout_height="260dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="20dp"
        app:cardCornerRadius="10dp"
        tools:ignore="MissingConstraints">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/ALPhotos_Image"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:scaleType="centerCrop"
                android:src="@drawable/algalleryimage1" />

            <TextView
                android:id="@+id/ALPhotos_Lable"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/ALPhotos_Image"
                android:padding="5dp"
                android:text="ALumni Photos 2015-16"
                android:textColor="@color/color_title"
                android:textSize="18dp" />

            <Button
                android:id="@+id/Alumni_Gallery1_Button"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/ALPhotos_Lable"
                android:layout_centerHorizontal="true"
                android:text="More Images"
                android:textAllCaps="false" />

        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/Alumni_Gallery2_card"
        android:layout_width="match_parent"
        android:layout_height="260dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="20dp"
        app:cardCornerRadius="10dp"
        tools:ignore="MissingConstraints">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/ALMPhotos_Image"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:scaleType="centerCrop"
                android:src="@drawable/algalleryimage2" />

            <TextView
                android:id="@+id/ALMPhotos_Lable"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/ALMPhotos_Image"
                android:padding="5dp"
                android:text="Alumni Photos 2014-15"
                android:textColor="@color/color_title"
                android:textSize="18dp" />

            <Button
                android:id="@+id/Alumni_Gallery2_Button"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/ALMPhotos_Lable"
                android:layout_centerHorizontal="true"
                android:text="More Images"
                android:textAllCaps="false" />

        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>