<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".IQAC">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alignmentMode="alignMargins"
        android:columnOrderPreserved="false"
        android:padding="14dp"
        android:rowCount="4">

    <!-- row 1 column 1-->
    <Button
        android:id="@+id/IQACCommitte_btn"
        android:layout_width="206dp"
        android:layout_height="206dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/rounded_card"
        android:text="I.Q.A.C \nCommittee"
        android:textAllCaps="false"
        android:textColor="@color/color_title"
        android:textSize="18dp"
        android:textStyle="italic"/>

    <!--        &lt;!&ndash; row 1 column 2&ndash;&gt;-->
    <Button
        android:id="@+id/IQACActivity_btn"
        android:layout_width="206dp"
        android:layout_height="206dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/rounded_card"
        android:text="I.Q.A.C \nAcitivity"
        android:textAllCaps="false"
        android:textColor="@color/color_title"
        android:textSize="18dp"
        android:textStyle="italic"/>

    <!--        &lt;!&ndash; row 2&ndash;&gt;-->
    <Button
        android:id="@+id/IQACMinOfMeeting_btn"
        android:layout_width="206dp"
        android:layout_row="1"
        android:layout_marginTop="10dp"
        android:layout_column="0"
        android:layout_height="206dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/rounded_card"
        android:text="Minutes of \nMeeting"
        android:textAllCaps="false"
        android:textColor="@color/color_title"
        android:textSize="18dp"
        android:textStyle="italic"/>

    <Button
        android:id="@+id/IQACRelevant_Doc_btn"
        android:layout_width="206dp"
        android:layout_height="206dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/rounded_card"
        android:text="Relevant of \n Documents"
        android:textAllCaps="false"
        android:layout_marginTop="10dp"
        android:textColor="@color/color_title"
        android:textSize="18dp"
        android:textStyle="italic"/>

    <!--        &lt;!&ndash; row 2&ndash;&gt;-->
    <Button
        android:id="@+id/NAAC_Report_btn"
        android:layout_width="206dp"
        android:layout_row="2"
        android:layout_marginTop="10dp"
        android:layout_column="0"
        android:layout_height="206dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/rounded_card"
        android:text="NAAC Report"
        android:textAllCaps="false"
        android:textColor="@color/color_title"
        android:textSize="18dp"
        android:textStyle="italic"/>

    </GridLayout>

</androidx.constraintlayout.widget.ConstraintLayout>