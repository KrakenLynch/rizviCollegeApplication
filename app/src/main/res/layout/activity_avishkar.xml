<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="15dp"
    tools:context="Lists.Avishkar">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/avishkar_string1"
            android:textAlignment="center"
            android:textSize="18dp"
            android:textColor="@color/DeepRed"
            android:textStyle="bold"/>

            <TextView
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Objectives of the Committee"
                android:textAlignment="center"
                android:textSize="28dp"
                android:textColor="@color/DarkGreen"
                android:textStyle="bold"/>

            <TextView
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/avishkar_string2"
                android:textSize="18dp"
                android:textColor="@color/color_title"
                />

            <TextView
                android:id="@+id/Avishkar_Link"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Avishkar Report 2016-17 \n Click hear to Download"
                android:textAlignment="center"
                android:textSize="18dp"
                android:textColor="@color/Blue"
                android:textStyle="bold"/>






        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>